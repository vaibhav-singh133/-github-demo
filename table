model

public class ScheduleItem
{
    public string ServiceNo { get; set; }
    public string Route { get; set; }
    public string CoachType { get; set; }
    public decimal Fare { get; set; }
    public DateTime DepartureTime { get; set; }
    public TimeSpan JourneyTime { get; set; }
}


Controller

using System.Collections.Generic;
using System.Web.Mvc;

namespace YourNamespace.Controllers
{
    public class ScheduleController : Controller
    {
        // GET: Schedule
        public ActionResult Index()
        {
            var schedules = GetSchedules();
            return View(schedules);
        }

        private List<ScheduleItem> GetSchedules()
        {
            // Fetch data from Sitecore items here.
            return new List<ScheduleItem>();
        }
    }
}


Index

@model IEnumerable<YourNamespace.Models.ScheduleItem>

<table>
    <thead>
        <tr>
            <th>Service No</th>
            <th>Route</th>
            <th>Coach Type</th>
            <th>Fare</th>
            <th>Departure Time</th>
            <th>Journey Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ServiceNo</td>
                <td>@item.Route</td>
                <td>@item.CoachType</td>
                <td>@item.Fare</td>
                <td>@item.DepartureTime.ToString("HH:mm")</td>
                <td>@item.JourneyTime.ToString(@"hh\:mm")</td>
                <td><button class="btn btn-danger">Book Now</button></td>
            </tr>
        }
    </tbody>
</table>

